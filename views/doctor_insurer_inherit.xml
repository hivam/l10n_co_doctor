<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <!--doctor insurer inherit-->
    <record id="doctor_co_insurer_inherit_form" model="ir.ui.view">
      <field name="name">doctor_co_insurer_inherit_view</field>
      <field name="model">doctor.insurer</field>
      <field name="inherit_id" ref="doctor.view_doctor_insurer_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form/group" position="replace">
          <group col="2" colspan="4">
            <field name="code"></field>
            <field name="user_type"></field>
            <field name="insurer" domain="[('is_company','=',True)]" options="{'no_create_edit': True}"></field>
          </group>
        </xpath>
      </field>  
    </record>

    <!--doctor insurer inherit-->
    <record id="doctor_co_insurer_inherit_tree" model="ir.ui.view">
      <field name="name">doctor_co_insurer_inherit_tree</field>
      <field name="model">doctor.insurer</field>
      <field name="inherit_id" ref="doctor.view_doctor_insurer_tree"/>
      <field name="arch" type="xml">

        <field name="insurer" position="after">
         <field name="user_type" string="Tipo Usuario"></field>
        </field>

      </field>
    </record>
  </data>
</openerp>
