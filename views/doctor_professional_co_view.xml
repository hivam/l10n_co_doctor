<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

  <record model="ir.ui.view" id="view_doctor_professional_co">
    <field name="name">Profesional de la salud Colombia</field>
    <field name="model">doctor.professional</field>
    <field name="inherit_id" ref="doctor.view_doctor_professional_form"/>
    <field name="priority" eval="2"/>
    <field name="arch" type="xml">


      <xpath expr="//group[@name='global']" position="replace">

        <group name="globalCo" col="2">
        </group>

      </xpath>

      <xpath expr="//group[@name='globalCo']" position="before">
        <group name="cabecera" col="1">
        </group>
      </xpath>

      <xpath expr="//group[@name='globalCo']" position="before">
        <field name="photo" widget='image' class="oe_avatar" options='{"preview_image":"image_medium"}'/>
        <div class="oe_title">
            <div>
                <div>
                    <label for="tdoc" string="Type of Document"/>
                    <field name="tdoc" placeholder="Type of Document" required="1"/>
                </div>

                <div>
                    <label  for="ref" string="Number ID"/>
                    <field name="ref" placeholder="Number ID" attrs="{'required': [('tdoc','in',['cc','ti'])]}"/>
                </div>
            </div>
        </div>
           <group name='group_personal_info'>
            <group name='group_personal_info_sub1'>
                <field name="lastname" required="1" placeholder="First Last Name" string="First Last Name"/>
                <field name="surname" placeholder="Second Last Name" string="Second Last Name"/>
                <field name="firstname" required="1" placeholder="First Name" string="First Name"/>
                <field name="middlename" placeholder="Second Name" string="Second Name"/>
            </group>
            <group name='group_personal_info_sub2'>

                <field name="speciality_id"/>
                <field name="professional_card"/>
                <field name="authority"/>

<!--             				<field name="blood_type"/> -->

            </group>
           </group>
      </xpath>



      <xpath expr="//group[@name='globalCo']" position="inside">

        <field name="city_id"/>
        <field name="street"/>
        <field name="work_phone"/>
      </xpath>

      <xpath expr="//group[@name='globalCo']" position="after">
        <group>
          <field name="state_id"/>
          <field name="zona"/>
          <field name="work_email"/>
          <field name="work_mobile"/>
        </group>
      </xpath>

    </field>
</record>
  <record model="ir.ui.view" id="view_doctor_professional_co_tree">
    <field name="name">Profesional de la salud Colombia</field>
    <field name="model">doctor.professional</field>
    <field name="inherit_id" ref="doctor.view_doctor_professional_tree"/>
    <field name="priority" eval="2"/>
    <field name="arch" type="xml">
      <field name="professional" position="replace" >
        <field name="nombreUsuario" />
      </field>
    </field>
  </record>


</data>
</odoo>
